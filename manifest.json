{
    "manifest_version": 3,
    "name": "Ekiserrepe's XRP Price Ticker",
    "description": "This extension displays the current XRP price.",
    "version": "0.1",
    "permissions": [
      "storage",
      "idle",
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/xrp-16.png",
        "48": "images/xrp-48.png",
        "128": "images/xrp-128.png"
      }
    },
    "icons": {
      "16": "images/xrp-16.png",
      "48": "images/xrp-48.png",
      "128": "images/xrp-128.png"
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  